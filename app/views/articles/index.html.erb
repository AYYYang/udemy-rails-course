<h1>This is the Articles catalog page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>

    </tr>
  </thead>
  
  <tbody>
    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title%></td>
        <td><%= a.description%></td>
        <td>a</td>
      </tr>
    <% end %>
  </tbody>

</table>