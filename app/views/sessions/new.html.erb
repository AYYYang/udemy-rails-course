<h1>Log in</h1>

<%= form_with(scope: :session, url: login_path ) do |f| %>

<p>
    <%= f.label :email %><br/>
		<%= f.text_field :email, placeholder: "Enter your email" %>
</p>

<p>
    <%= f.label :password %><br/>
		<%= f.text_field :password, placeholder: "Enter your password" %>
</p>

<p>
    <%= f.submit "Log in" %>
</p>

<% end %>

<%= link_to "Back to Home", root_path, method: :get %>